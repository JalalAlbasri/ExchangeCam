<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="DashboardLabels" parent="@android:style/TextAppearance.Holo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">8sp</item>
    </style>

    <style name="currencySpinner" parent="@android:style/Widget.Holo">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:spinnerMode">dialog</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="currencyDisplay" parent="@android:style/TextAppearance.Holo">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">45sp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/character_boxes</item>
        <item name="android:paddingRight">10sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>
	
    <style name="exchangeErrorDialog" parent="@android:style/Theme.Holo.Dialog" />
    <style name="indeterminateProgressDialog" parent ="@android:style/Theme.Holo.Dialog.MinWidth" />
    <style name="dashboardFragmentStyle" parent="@android:style/Theme.Holo" />
    
</resources>
